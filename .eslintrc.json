{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-console": ["warn", {"allow": ["info", "warn", "error"]}],
    "key-spacing": "warn",
    "comma-dangle": ["warn", "always-multiline"],
    "indent": ["warn", 2, {"SwitchCase": 1}],
    "no-multi-spaces": "warn",
    "semi": ["warn", "always"],
    "prefer-const": "error",
    "no-var": "error",
    "quotes": ["error", "double"]
  }
}
